<?xml version="1.0"?>
<ruleset name="OgdChStandard">
 <description>The ogdch-specific coding standard (fully includes WordPress rules).</description>

    <!-- Include the whole PSR-2 standard -->
    <rule ref="WordPress">
        <exclude name="WordPress.Files.FileName" />
        <exclude name="WordPress.CSRF.NonceVerification" />
        <exclude name="WordPress.VIP.ValidatedSanitizedInput" />
        <exclude name="WordPress.VIP.RestrictedFunctions" />
        <exclude name="WordPress.VIP.SuperGlobalInputUsage" />
        <exclude name="Squiz.Commenting.InlineComment" />
        <exclude name="Squiz.Commenting.BlockComment" />
    </rule>
    <rule ref="Internal.NoCodeFound">
        <severity>0</severity>
    </rule>
</ruleset>
